<body>

          <div class="row">
            <div class="col-md-12">
              <div class="cus-logo-big">
                <img alt="OpportunityHub" src="images/support_images/logo-big.png">
                <div class="row cus-row-margin">
                  <div class="col-md-3"></div>
                  <div class="col-md-6">
                    <span>...where coders meet the community...</span>
                  </div>
                  <div class="col-md-3"></div>
                </div>
                <div class="row cus-row-margin"></div>
                <div class="row cus-row-margin">
                  <div class="col-md-12">
                      <button type="button" class="btn btn-outline btn-primary" data-toggle="modal" href="#modal-container-990751" id="modal-990751">Login</button>
                      <button type="button" class="btn btn-primary" data-toggle="modal" href="#modal-container-990750" id="modal-990750">Sign Up</button>
                  </div>
                </div>
                <div class="row cus-row-margin"></div>
                <div class="row cus-row-margin"><a class="cus-link" href="/index">Check out projects.</a></div>
              </div>
            </div>
          </div>



    <!-- Modals -->
    <!-- Login Modal -->
    <div aria-hidden="true" aria-labelledby="myModalLabel" class=
    "modal fade" id="modal-container-990751" role="dialog" ng-controller="LoginController">
    <div class="modal-dialog">
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        <div class="login-panel panel panel-default">
                          <div class="panel-heading">
                              <h3 class="panel-title">Please Log In</h3>
                          </div>
                            <div class="panel-body">
                                <form role="form">
                                    <fieldset>
                                        <div class="form-group">
                                            <input class="form-control" placeholder="E-mail" name="email" type="email" ng-model="email" autofocus>
                                        </div>
                                        <div class="form-group">
                                            <input class="form-control" placeholder="Password" name="password" type="password" ng-model = "password" value="">
                                        </div>
                                        <div class="checkbox">
                                            <label>
                                                <input name="remember" type="checkbox" value="Remember Me">Remember Me
                                            </label>
                                        </div>
                                        <button class="btn btn-primary btn-block" ng-click="doLogin()">Log In</button>
                                    </fieldset>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
      </div>
    </div>

    <!-- Sign Up Modal -->
    <div aria-hidden="true" aria-labelledby="myModalLabel" class="modal fade" id="modal-container-990750" role="dialog" ng-controller="SignUpController">
    <div class="modal-dialog">
      <div class="row">
        <div class="col-md-12">
            <div class="login-panel panel panel-default">
              <div class="panel-heading">
                  <h3 class="panel-title">Please Sign Up</h3>
              </div>
                <div class="panel-body">
                          <form role="form">
                            <div class="form-group">
                                <label>Who are you?</label>
                                <label class="radio-inline">
                                    <input type="radio" name="optionsRadiosInline" ng-model="user.type" id="optionsRadiosInline1" value="user" checked>A Volunteer
                                </label>
                                <label class="radio-inline">
                                    <input type="radio" name="optionsRadiosInline" ng-model="user.type" id="optionsRadiosInline2" value="npo">A Non-Profit Organization
                                </label>
                            </div>

                              <div class="form-group">
                                    <label>Name</label>
                                  <input class="form-control" placeholder="Enter text" ng-model = "name">
                                  <label>Email ID</label>
                                  <input class="form-control" placeholder="Enter text" ng-model = "email">
                                  <label>Password</label>
                                  <input class="form-control" placeholder="Enter text" type="password" ng-model="password">
                                  <label>Confirm Password</label>
                                  <input class="form-control" placeholder="Enter text" type="password" ng-model="confirmpwd">
                              </div>

                              <div class="row cus-row-margin">
                                <div class="col-md-10">
                                  <div class="alert alert-danger cus-alert" id="hideError" ng-hide="hideError">
                                    Passwords doesn't match.
                                  </div>
                                </div>
                                <div class="col-md-2">
                                    <button type="submit" class="btn btn-primary pull-right" ng-click="doSignUp()">Submit</button>
                                </div>
                              </div>
                          </form>
                  </div>
                  <!-- /.row (nested) -->
                </div>
        </div>
      </div>
    </div>
  </div>







    <!-- jQuery -->
    <script src="vendor/jquery/jquery.min.js"></script>

